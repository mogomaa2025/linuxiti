                <div class="filesystem-item">
                    <div class="filesystem-path">/root</div>
                    <div>Root user's home directory</div>
                </div>
                <div class="filesystem-item">
                    <div class="filesystem-path">/usr</div>
                    <div>User programs and system binaries</div>
                </div>
                <div class="filesystem-item">
                    <div class="filesystem-path">/var</div>
                    <div>Variable data like logs and databases</div>
                </div>
                <div class="filesystem-item">
                    <div class="filesystem-path">/tmp</div>
                    <div>Temporary files (cleared on reboot)</div>
                </div>
                <div class="filesystem-item">
                    <div class="filesystem-path">/dev</div>
                    <div>Device files (hardware interfaces)</div>
                </div>
                <div class="filesystem-item">
                    <div class="filesystem-path">/mnt</div>
                    <div>Mount point for temporary mounted filesystems</div>
                </div>
            </div>
